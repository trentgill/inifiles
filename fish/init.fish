# bobthefish display settings
set -g theme_color_scheme base16
set -g theme_display_vi yes

# activate vim keybindings in fish
fish_vi_key_bindings
fish_vi_cursor

# git aliases
alias g "git"
alias gap "git add -p"
alias gc "git commit -m"
alias gu "git push"
alias gd "git pull"
alias gs "git status"

